---
// Card body
// ------------
// Description: the body of the main content of the card
// Properties:
// - classes: extra classes

// Props
type Props = {
	classes?: string
}
const { classes } = Astro.props
---

<div class:list={['card__body', { [`${classes}`]: classes }]}>
	<slot />
</div>

<style>
	.card__body {
		@apply px-2 pt-0 xl:pt-5 pb-0 content-start;
	}
	.card__body h4 {
	}
</style>
