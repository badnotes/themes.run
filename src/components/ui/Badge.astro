---
// Badge
// ------------
// Description: A badge is a visual indicator that draws attention to an interface element. It enhances the component to which it is attached with additional information.
// Properties:
// - Name: the text of the badge
// - Link: the link of the badge (optional)
// - Type: the type of the badge (neutral, primary)
// - Classes: additional classes

// Reference: https://wind-ui.com/components/badges/

// Props
type Props = {
	name: string
	link?: string
	type?: string
	classes?: string
}
const { name, link, type = 'neutral', classes } = Astro.props
---

{
	link ? (
		<a
			href={link}
			class:list={['badge', { [`${classes}`]: classes }, { [`badge--${type}`]: type }]}
		>
			{name}
		</a>
	) : (
		<span class:list={['badge', { [`${classes}`]: classes }, { [`badge--${type}`]: type }]}>
			<div>
				<svg xmlns="http://www.w3.org/2000/svg" width="20px" height="20px" viewBox="0 0 24 24"><path fill="currentColor" d="M13.51 3.139c-.652-1.185-2.368-1.185-3.021 0a28 28 0 0 0-2.114 4.894a.35.35 0 0 1-.33.223a30 30 0 0 0-4.375.436c-1.337.233-1.926 1.837-.91 2.83q.192.188.388.374a32 32 0 0 0 3.103 2.587a.274.274 0 0 1 .11.31a27.6 27.6 0 0 0-1.172 5.065c-.19 1.424 1.318 2.298 2.495 1.694a29.3 29.3 0 0 0 4.085-2.537a.4.4 0 0 1 .462 0a29 29 0 0 0 4.085 2.537c1.177.604 2.685-.27 2.495-1.694a27.6 27.6 0 0 0-1.171-5.065a.274.274 0 0 1 .11-.31a32 32 0 0 0 3.49-2.96c1.016-.994.427-2.598-.91-2.831a30 30 0 0 0-4.376-.436a.35.35 0 0 1-.329-.223a27.7 27.7 0 0 0-2.114-4.894"/></svg>
			</div>
			{name}
		</span>
	)
}

<style>
	.badge {
		@apply inline-flex items-center justify-center gap-1 rounded px-1 py-1 text-sm transition-colors;
	}
	.badge--neutral {
		@apply bg-neutral-100 text-neutral-500 dark:bg-neutral-800 dark:text-neutral-500;
	}
	.badge--primary {
		@apply bg-primary-500 text-white;
	}
</style>
