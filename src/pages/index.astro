---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Features from '../components/blocks/features/FeatureTechs.astro'
import CTA from '../components/blocks/CTA/BasicDark.astro'
import { getCollection } from 'astro:content'


const types = ["astro", "next", "hugo", "jekyll", "wordpress", "hexo", "obsidian"]
const allPosts = (await getCollection("blog", ({ id }: any) => true));
const typeCount = types.map((t: any) => allPosts.filter(v => v.slug.startsWith(t)).length)
	
// Content
// - SEO
const SEO = {
	title: 'Themes.run | The themes.run, your creative accelerator. ',
	description: 'Themes and Template on Astro Next Hugo Jekyll wordPress hexo Obsidian, From template to masterpiece, just a little inspiration from you.'
}
---

<Layout title={SEO.title} description={SEO.description}>

	<Features typeCount={typeCount}/>
	<CTA />
</Layout>
